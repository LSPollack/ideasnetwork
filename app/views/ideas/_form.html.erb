<%= form_for(@idea) do |f| %>
  
  <% if @idea.errors.any? %>
    <div id="error_explanation" id="error_explanation_for_ideas">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <%= f.label :title, "What's the headline here? (Describe your idea in one line. This will appear on the homepage.)" %>
    <%= f.text_field :title %>
    <br><br>
    <%= f.label :description, "OK! People want to know more. Here's your chance to describe your idea in more depth." %>
    <br>
    <%= f.text_area :description %>
    <br><br>
    <%= f.label :category_id, 'Category' %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: true) %>
    <br><br>

    <div>
      <%= f.label :idea_image %><br>
      <span>Upload an image from your computer</span><br><br> 
      <span><%= f.file_field :idea_image %><span>
      <br>
      <span>Or, alternatively, provide a link</span>
      <%#= f.label :remote_idea_image_url %>
      <%= f.text_field :remote_idea_image_url %>
    </div>

    <br>
    <%= f.label :video_link, 'Link to your pitch on YouTube' %>
    <%= f.text_field :video_link %>
    <br><br>
    <%= f.label :feedback_type, 'What kind of feedback do you want?' %>
    <br>
    <%= f.select :feedback_type, ["Devil's advocate (1)", "Be honest (2)", "Meh, I dunno (3)", "Please be nice (4)", "Lie to me (5)" ] %>
    <br><br>
  </div>
  
  <div class="actions">
    <%= f.submit :id => "create-idea" %>
  </div>

  <br><br>

<% end %>